#キーバインドをviモードに
bindkey -v
#補完機能を有効にする
autoload -U compinit; compinit
#補完一覧を表示
setopt auto_list
#補完キー連打で次の候補へ
setopt auto_menu
# 補完時に大文字小文字を区別しない
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'
##cdの入力を省略
setopt auto_cd
#ディレクトリストックに追加する
setopt auto_pushd
#ダブっているディレクトリストックを記録しない
setopt hist_ignore_all_dups
#ビープ音を鳴らさない
setopt no_beep
#スペル訂正
setopt correct
